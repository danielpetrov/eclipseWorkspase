function insertInPlace(&$array, $current, $n){
	if ($current == count($array)) {
		array_push($array, $n);
		return;
	} else if($n < $array[$current]) {
		array_splice($array, $current, 0 , $i);
		return;
	}
	
	insertInPlace($array, $current + 1, $n);
}