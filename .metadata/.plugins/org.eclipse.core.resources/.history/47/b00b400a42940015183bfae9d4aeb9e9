<?php
/* Задача 9:
Да се състави програма, чрез която по въведен низ съдържащ букви,
цифри, знак минус '-' се извежда сборът на въведените числа като се
отчита знакът '-' пред съответното число.
Вход: asd-12sdf45-56asdf100
Изход:
-12
45
-56
100
Сума = 77 */
require_once 'Readline.php';

$word = readline ( "Enter word: " . PHP_EOL );

$AllNumbers = [];

$index = 0;

for ($i = 0; $i < strlen($word); $i++) {
	if (isDigitOrMinus($word[$i])) {
		$AllNumbers[$index++] = $word[$i];
		 for ($i = $i; isDigitOrMinus($word[$i]); $i++) {
		 	$AllNumbers[$index] += $word[$i];
		 }
	}
}

function isDigitOrMinus($character){
	$asciiOfCharacter = ord($character);
	if ($asciiOfCharacter >= 48 && $asciiOfCharacter <= 57 || $asciiOfCharacter == 45) {
		return true;
	} else return false;
}