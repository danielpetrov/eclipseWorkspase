function calculateDistance($longitudeA, $longitudeB, $latitudeA, $latitudeB){
	$x = ($longitudeB - $longitudeA) * cos ( ($latitudeA + $latitudeB) / 2);
	$y = ($latitudeB - $latitudeA);
	$d = sqrt(pow($x,2) + pow($y,2)) * 6371;
	return $d;
}
