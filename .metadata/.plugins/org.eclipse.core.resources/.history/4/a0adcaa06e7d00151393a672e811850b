<?php
function checkIfNumber($value) {
	if (! is_numeric ( $value )) {
		throw new Exception ( "Please enter numberic value for" . $value . PHP_EOL );
	}
	
	return true;
}

function checkIfWholeNumber($value) {
	if (! (floor ( $value ) == $value)) {
		throw new Exception ( "Please enter whole number for a and b!" . $value . PHP_EOL );
	}
	
	return true;
}
