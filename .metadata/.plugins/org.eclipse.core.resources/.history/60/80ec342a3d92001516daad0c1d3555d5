$n = 3;
var_dump(checkIfPrime($n, sqrt($n)));

function checkIfPrime($n, $i){
	if ($n <= 1) {
		return false;
	}
	if ($i < 2) {
		return true;
	}
	if (!($n % $i)) {
		return false;
	}
	return checkIfPrime($n, $i - 1);
}