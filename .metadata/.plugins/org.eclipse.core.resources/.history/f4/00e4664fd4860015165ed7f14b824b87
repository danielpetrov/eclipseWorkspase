<?php
/* Задача 15:
Да се състави програма, която да изчисли сумата на всички
числа от 1 до въведено число N.
Пример: 5
Изход: 15
Използвайте цикъл do-while. */

require_once 'Readline.php';

$finalNumber = ( int ) readline ( "Enter finalNumber:" . PHP_EOL );

$sum = 0;

$firstNumber = 1;

$currentNumber = $firstNumber;

do{
	$sum += $currentNumber;
	
	$currentNumber++;
} while($currentNumber != $finalNumber); 

echo $sum;