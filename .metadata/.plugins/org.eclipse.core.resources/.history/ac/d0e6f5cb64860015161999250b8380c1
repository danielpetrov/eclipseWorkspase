<?php
/* Задача10:
Въведете число от клавиатурата и определете дали е
просто. Просто число е това което се дели САМО на 1 и на себе си. */

require_once 'Readline.php';
$numberToCheckIfPrime = ( int ) floor ( readline ( "Please enter a: " . PHP_EOL ) );
$sqrtOfTheNumber = sqrt($numberToCheckIfPrime);

$isPrime = true;

if ($numberToCheckIfPrime <= 1) {
	$isPrime = false;
}

for($i = 2; $i < $sqrtOfTheNumber; $i ++) {
	if (!($a % $i)) {
		$isPrime = false;
		break;
	}
}

if ($isPrime) {
	echo "The number is prime";
} else {
	echo "The number is not prime";
}
