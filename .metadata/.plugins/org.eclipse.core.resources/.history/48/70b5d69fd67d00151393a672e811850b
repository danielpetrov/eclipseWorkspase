<?php
/*
 * Да се състави програма, която по въведени координати на 2 позиции
 * от шахматната дъска извежда отговор дали са оцветени в еднакъв или
 * различен цвят.
 * Шахматната дъска е квадратна.
 * Въвеждат се две двойки числа от интервала [1..8].
 * Пример: 2 2 3 2
 * Изход: Позициите са с различен цвят
 */
require_once 'Readline.php';
require_once 'Exceptions.php';

$chessBoardColumn1 = readline ( "Please enter chessBoardColumn1 in Range [1..8]: " . PHP_EOL );
$chessBoardrow1 ( "Please enter chessBoardrow1 in Range [1..8]: " . PHP_EOL );

$chessBoardColumn2 = readline ( "Please enter chessBoardColumn2 in Range [1..8]: " . PHP_EOL );
$chessBoardrow2 ( "Please enter chessBoardrow2 in Range [1..8]: " . PHP_EOL );

try {
	checkIfNumber ( $chessBoardColumn1 );
	checkIfNumber ( $chessBoardColumn2 );
	checkIfNumber ( $chessBoardrow1 );
	checkIfNumber ( $chessBoardrow2 );
	
	checkIfWholeNumber ( $chessBoardColumn1 );
	checkIfWholeNumber ( $chessBoardColumn2 );
	checkIfWholeNumber ( $chessBoardrow1 );
	checkIfWholeNumber ( $chessBoardrow2 );
	
	checkIfNumberIsInRange ( 1, 8, $chessBoardColumn1 );
	checkIfNumberIsInRange ( 1, 8, $chessBoardColumn2 );
	checkIfNumberIsInRange ( 1, 8, $chessBoardrow1 );
	checkIfNumberIsInRange ( 1, 8, $chessBoardrow2 );
} catch ( Exception $e ) {
	echo "Message: " . $e->getMessage ();
}