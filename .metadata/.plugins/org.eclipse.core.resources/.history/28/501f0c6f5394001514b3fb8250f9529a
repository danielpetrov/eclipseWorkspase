<?php
/* Задача 1:
Да се състави програма, която сортира по метода на мехурчето
предварително въведен двумерен масив с естествени числа.
Сортирането да се извърши по редове/колони.
Пример:
15; 16; 8; 1;
2; 3; 4; 7;
9; 11; 19; 6;
Изход:
1; 2; 3; 4;
6; 7; 8; 9;
11; 15; 16; 19 */

$someArray = [15, 1,2,3,5,23,6,11,4, 15,23];
$arrayLength = count ( $someArray );

for ($i = 0; $i < $arrayLength; $i++) {
	for ($j = 0; $j < $arrayLength - 1; $j++) {
		if ($someArray[$j] > $someArray[$j + 1]) {
			swap($someArray, $j, $j+1);
		}
	}
}

function swap(&$array, $index1, $index2) {
	$swapy = $array [$index1];
	$array [$index1] = $array [$index2];
	$array [$index2] = $swapy;
}
print_r ( $someArray );