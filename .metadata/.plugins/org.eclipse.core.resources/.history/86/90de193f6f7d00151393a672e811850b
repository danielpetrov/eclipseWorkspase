<?php
function checkIfNumber($value, $var_name) {
	if (! is_numeric ( $value )) {
		throw new Exception ( "Please enter numberic value for " . $var_name . PHP_EOL );
	}
	
	return true;
}

function checkIfWholeNumber($value) {
	if (! (floor ( $value ) == $value)) {
		throw new Exception ( "Please enter whole number for a and b! " . $value . PHP_EOL );
	}
	
	return true;
}
