<?php
require_once 'Readline.php';
$array = [1,3,5,7,8,11,45];
$n = 6;
for ($i = 1; $i < count($array); $i++) {
	if(($array[$i - 1] <= $n) && ($n < $array[$i])) {
		echo $i;
	}
}
array_splice( $array, 3, 0, $n );
print_r($array);
