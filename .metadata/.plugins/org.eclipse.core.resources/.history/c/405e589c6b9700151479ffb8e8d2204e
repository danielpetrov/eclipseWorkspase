<?php
$someArray = [5, 8, 73, 0, 43, 3424, 78, 98];

//echo quickSort($someArray, 0, count($someArray) - 1, 3);
var_dump(quickSort($someArray, 0, count($someArray) - 1, 3));

function quickSort(&$array, $low, $high, $k){
	if ($low < $high) {
		$needle = count($array) - $k;
		echo "need",$needle . PHP_EOL;
		$p = partition($array, $low, $high);
		
		echo "p",$p . PHP_EOL;
		if ($p == $needle) {
			echo "z";
			echo $array[$needle];
			return $array[$needle];
		} else if($p > $needle){
			quickSort($array, $low, $p - 1, $k);
		} else {
			quickSort($array, $p + 1, $high, $k);
		}
		
	}
}

function partition(&$array, $low, $high){
	$pivot = $array[$high];
	$i = $low;
	for ($j = $low; $j < $high; $j++) {
		if ($array[$j] <= $pivot) {
			swap($array, $i, $j);
			$i++;
		}
	}
	
	swap($array, $i, $high);
	
	return $i;
}

function swap(&$array, $index1, $index2) {
	$swapy = $array [$index1];
	$array [$index1] = $array [$index2];
	$array [$index2] = $swapy;
}