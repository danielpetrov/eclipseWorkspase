<?php
function checkIfNumber($value, $var_name) {
	if (! is_numeric ( $value )) {
		throw new Exception ( $var_name . " should have a numeric value!" . PHP_EOL );
	}
	
	return true;
}

function checkIfWholeNumber($value, $var_name) {
	if (! (floor ( $value ) == $value)) {
		throw new Exception ( $var_name . " should be a whole number!" . PHP_EOL );
	}
	
	return true;
}

function checkIfDifferentNumbers() {
    if (count(func_get_args()) !== count(array_unique(func_get_args()))) {
    	throw new Exception ("Numbers should be different!" . PHP_EOL );
    }
    
	return true;
}

function checkIfValidDateTimeFormat($year, $month, $day){
	if (0 > $year || year > 3000) {
		throw new Exception ("Year should be between 0 and 3000!" . PHP_EOL );
	}
	if (1 > $month || $month > 12) {
		throw new Exception ("Month should be between 1 and 12!" . PHP_EOL );
	}
	if (1 > $day || $day > 31) {
		throw new Exception ("Day should be between 1 and 31!" . PHP_EOL );
	}
}