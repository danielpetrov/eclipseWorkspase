<!-- Въведете 3 различни числа от конзолата и ги разпечатайте в низходящ
ред. -->
<?php
require_once 'Readline.php';
require_once 'Exceptions.php';

Print "Please enter numbers for a, b and c" . PHP_EOL;

$a = readline ( "Enter a:" . PHP_EOL );

$b = readline ( "Enter b:" . PHP_EOL );

$c = readline ( "Enter c:" . PHP_EOL );

try {
	checkIfNumber ( $a, "\$a" );
	checkIfNumber ( $b, "\$b" );
	checkIfNumber ( $c, "\$c" );
	
	$array = NULL;
	$possitionOfA = findArrayPossitionOfNumberForSortingReasons($a, $b, $c);
	$possitionOfB = findArrayPossitionOfNumberForSortingReasons($b, $c, $a);
	$possitionOfC = findArrayPossitionOfNumberForSortingReasons($c, $b, $a);
	
	for ($i = 0; $i < 3; $i++) {
		echo $array[$i] . PHP.EOL;
	}
} 

catch ( Exception $e ) {
	echo "Message: " . $e->getMessage ();
}

//returns 0 if largest, 1 if medium and 2 if smaller of three numbers
function findArrayPossitionOfNumberForSortingReasons($numberToFindItsPossition, $num2, $num3) {
	$counter = 2;
	
	if ($numberToFindItsPossition > $num2) {
		$counter--;
	}
	if ($numberToFindItsPossition > $num3) {
		$counter--;
	}
	
	return $counter;
}